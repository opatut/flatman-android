<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.opatut.flatman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.opatut.flatman.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.opatut.flatman.WelcomeWizardActivity"
            android:label="@string/title_activity_welcome_wizard"
            android:parentActivityName="de.opatut.flatman.main.MainActivity" >
        </activity>
        <activity
            android:name="de.opatut.flatman.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="de.opatut.flatman.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.opatut.flatman.main.MainActivity" />
        </activity>
        <activity
            android:name="de.opatut.flatman.MemberDetailsActivity"
            android:label="@string/title_activity_member_details"
            android:parentActivityName="de.opatut.flatman.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.opatut.flatman.main.MainActivity" />
        </activity>
        <activity
            android:name="de.opatut.flatman.ShoppingItemActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:label="@string/title_activity_shopping_item" >
        </activity>
    </application>

</manifest>
