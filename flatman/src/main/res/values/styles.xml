<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomButton" parent="android:style/Widget.Button">
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#A000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/card_background_selector</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonFlatCore">
        <item name="android:background">@drawable/button_flat_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonFlat" parent="@style/ButtonFlatCore">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonFlatIcon" parent="@style/ButtonFlatCore">
        <item name="android:tint">#757575</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ButtonFlatPrimary" parent="@style/ButtonFlat">
        <item name="android:textColor">@color/primary</item>
	</style>

    <style name="ButtonRaised" parent="@style/ButtonFlatCore">
        <item name="android:textColor">#444</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">#DDD</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonRaisedBlock" parent="@style/ButtonRaised">
        <item name="android:layout_width">match_parent</item>
	</style>

    <style name="ImageOnlyButton">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/image_button_background_selector</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SectionHeader">
        <item name="android:background">@drawable/section_header</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
    </style>

    <color name="TextDisabled">#eaeaea</color>

</resources>