<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vpi="http://schemas.android.com/lib/com.viewpagerindicator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_for_cards"
        android:padding="8dp"
        vpi:snap="true"
        vpi:fillColor="#88FFFFFF"
        vpi:pageColor="#88000000"
        vpi:radius="6dp"
        vpi:strokeColor="#00000000"
        vpi:strokeWidth="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="de.opatut.flatman.MemberDetailsActivity" />

</LinearLayout>